<Window x:Class="DesktopApplication.Forms.LoginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopApplication.Forms"
        mc:Ignorable="d"
        Title="LoginForm" Height="275" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Text="LOGIN" HorizontalAlignment="Center" Margin="0,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold" FontSize="36"/>
        <TextBox x:Name="loginTextBox" HorizontalAlignment="Center" Margin="0,98,0,0" TextWrapping="Wrap" Text="login" VerticalAlignment="Top" Width="280" FontSize="16" GotFocus="loginTextBox_GotFocus"/>
        <TextBox x:Name="passwordTextBox" HorizontalAlignment="Center" Margin="0,142,0,0" TextWrapping="Wrap" Text="password" VerticalAlignment="Top" Width="280" FontSize="16" GotFocus="passwordTextBox_GotFocus"/>
        <Button x:Name="buttonLogin" Content="Вход" HorizontalAlignment="Center" Margin="0,189,0,0" VerticalAlignment="Top" FontSize="22" Width="144" Click="buttonLogin_Click"/>
    </Grid>
</Window>
